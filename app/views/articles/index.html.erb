<div class="container">
    <h1>Articles</h1>
    <%= link_to "Submit Article", new_article_path, class: 'btn waves-effect waves-light blue', type: 'submit' %>

    <br>
    <% @article.each do |article| %>
        <div class="row">
            <% if article.aasm_state == "source" %>
                <div class="col s3">
                    <%= link_to article.title, article %>
                    <%= article.link %>
                    <%= article.aasm_state %>
                </div>
            <% end %>

            <% if article.aasm_state == "approved" %>
                <div class="col s3 push-s3">
                    <%= link_to article.title, article %>
                    <%= article.link %>
                    <%= article.aasm_state %>
                </div>
            <% end %>

            <% if article.aasm_state == "writing" %>
                <div class="col s3 push-s6">
                    <%= link_to article.title, article %>
                    <%= article.link %>
                    <%= article.aasm_state %>
                </div>
            <% end %>

            <% if article.aasm_state == "publishing" %>
                <div class="col s3 push-s9">
                    <%= link_to article.title, article %>
                    <%= article.link %>
                    <%= article.aasm_state %>
                </div>
            <% end %>
        </div>
    <% end %>

</div>
